{
  "name": "@anypoint-web-components/awc",
  "version": "2.0.0",
  "description": "Anypoint web components - base components library",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "author": {
    "name": "Pawel Uchida-Psztyc",
    "email": "pawel.psztyc@gmail.com"
  },
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/anypoint-web-components/awc.git"
  },
  "bugs": {
    "url": "https://github.com/anypoint-web-components/awc/issues",
    "email": "arc@mulesoft.com"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server --app-index demo/index.html --node-resolve --open --watch --root-dir .",
    "start:ts": "concurrently --raw \"tsc --watch --preserveWatchOutput\" \"wds --app-index demo/index.html --node-resolve --open --watch --root-dir .\"",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
  },
  "dependencies": {
    "@open-wc/dedupe-mixin": "^1.3.0",
    "lit": "^2.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "3.1.2",
    "@pawel-up/data-mock": "^0.2.0",
    "@polymer/iron-test-helpers": "^3.0.1",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@web/dev-server": "^0.1.30",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/test-runner": "0.13.27",
    "@web/test-runner-playwright": "^0.8.8",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prismjs": "^1.27.0",
    "sinon": "^13.0.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "customElements": "custom-elements.json",
  "keywords": [
    "web-components",
    "anypoint",
    "icons"
  ],
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "env": {
      "mocha": true,
      "browser": true,
      "es2021": true,
      "node": false
    },
    "parserOptions": {
      "ecmaFeatures": {},
      "ecmaVersion": "latest",
      "sourceType": "module",
      "lib": [
        "ES2021"
      ]
    },
    "overrides": [
      {
        "files": [
          "demo/**/*.js",
          "test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "unused-imports",
      "no-only-tests"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": [
        "error"
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "ts": "never"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "error",
      "unused-imports/no-unused-imports": "error",
      "no-only-tests/no-only-tests": "error",
      "no-dupe-class-members": "off",
      "max-len": "off",
      "indent": "off",
      "no-trailing-spaces": "off",
      "object-curly-newline": "off",
      "arrow-parens": "off",
      "comma-dangle": "off",
      "quotes": "off"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ],
      "import/resolver": {
        "typescript": {},
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "globals": {
      "EventListener": true,
      "PropertyIndexedKeyframes": true,
      "KeyframeAnimationOptions": true,
      "AddEventListenerOptions": true,
      "ElementInternals": true,
      "ScrollToOptions": true,
      "ScrollBehavior": true,
      "Keyframe": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}
