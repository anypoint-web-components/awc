{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "import", "@typescript-eslint", "unused-imports", "no-only-tests"
  ],
  "extends": [
    "@open-wc",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "rules": {
    "no-unused-vars": "off",
    "class-methods-use-this": "off",
    "no-continue": "off",
    "no-console": "error",
    "@typescript-eslint/no-unused-vars": [
      "error"
    ],
    "@typescript-eslint/explicit-function-return-type": "error",
    "import/no-unresolved": ["error"],
    "import/extensions": ["error", "ignorePackages", {
      "js": "never",
      "ts": "never"
    }],
    "unused-imports/no-unused-imports": "error",
    "no-only-tests/no-only-tests": "error",
    "no-dupe-class-members": "off",
    "max-len": "off",
    "indent": "off",
    "no-trailing-spaces": "off",
    "object-curly-newline": "off",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "quotes": "off",
    "object-curly-spacing": "off",
    "semi": "off",
    "no-empty-function": "off",
    "no-plusplus": "off",
    "padded-blocks": "off"
  },
  "env": {
    "mocha": true,
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "lib": ["ES2021"]
  },
  "overrides": [
    {
      "files": [
        "test/**/*.ts"
      ],
      "rules": {
        "no-console": "off",
        "no-unused-expressions": "off",
        "no-plusplus": "off",
        "no-param-reassing": "off",
        "class-methods-use-this": "off",
        "import/no-extraneous-dependencies": "off"
      }
    },
    {
      "files": [
        "**/*.ts"
      ],
      "rules": {
        "no-redeclare": "off"
      }
    },
    {
      "files": [
        "**/*.js",
        "**/*.mjs"
      ],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off"
      }
    },
    {
      "files": [
        "demo/**/*.ts",
        "test/**/*.ts",
        "**/demo/**/*.html"
      ],
      "rules": {
        "no-console": "off",
        "no-unused-expressions": "off",
        "no-plusplus": "off",
        "no-param-reassing": "off",
        "class-methods-use-this": "off",
        "import/no-extraneous-dependencies": "off",
        "import/no-duplicates": "off"
      }
    }
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/extensions": [".js", ".jsx", ".ts", ".tsx"],
    "import/resolver": {
      "typescript": {
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "globals": {
    "EventListener": true,
    "PropertyIndexedKeyframes": true,
    "KeyframeAnimationOptions": true,
    "AddEventListenerOptions": true,
    "ElementInternals": true,
    "ScrollToOptions": true,
    "ScrollBehavior": true,
    "NodeListOf": true,
    "GlobalEventHandlers": true,
    "Keyframe": true
  }
}
